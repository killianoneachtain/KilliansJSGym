<section class="ui raised segment">

    <!-- https://www.anychart.com/blog/2017/12/06/pie-chart-create-javascript/ -->

<script src="https://cdn.anychart.com/js/8.0.1/anychart-core.min.js"></script>
<script src="https://cdn.anychart.com/js/8.0.1/anychart-pie.min.js"></script>

    <div id="container" style="width: 100%; height: 250px"></div>
    <script>
        <!-- chart code will be here -->
        // Set data
        var data = [
            {x: "Open", value: {{openGoals.length}}, exploded: true },
            {x: "Achieved", value: {{achievedGoals.length}} },
            {x: "Missed", value: {{missedGoals.length}} },
        ];

        var chart = anychart.pie();

        // set the chart title
        chart.title("Goal Achievements");

        // add the data
        chart.data(data);

        // display the chart in the container
        chart.container('container');
        chart.legend().position("right");
        chart.legend().fontSize(16);

        // sets colour of each category to orange,green and red.
        chart.palette(["#FFA500", "#008000","#FF0000"]);


        // configure connectors
        chart.connectorStroke({color: "#595959", thickness: 2, dash:"2 2"});

        chart.draw();

    </script>
</section>