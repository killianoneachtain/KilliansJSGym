<section class="ui raised segment" style="background-color: lightsteelblue">
<form class ="ui equal width form" action="/dashboard/memberAddGoal" method="POST">
    <div class="three fields">
        <div class="required field">
            <label>Lose / Gain Weight</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="weightChoice">
                <i class="dropdown icon"></i>
                <div class="default text">Lose / Gain Weight </div>
                <div class="menu">
                    <div class="item" data-value="Lose">Lose</div>
                    <div class="item" data-value="Gain">Gain</div>
                </div>
            </div>

            <script>$('.ui.dropdown')
                    .dropdown()
            ;</script>
        </div>

        <div class="required field">
            <label>Goal Date</label>
            <div class="ui right labeled input">
                <input type="date" name="completionDate" required>
            </div>
        </div>

        <div class="required field">
        <label>Weight to Achieve</label>
        <div class="ui right labeled input">
            <input placeholder="00.00" type="number" step="0.01" min="{{lowerGoalWeight}}" max="{{upperGoalWeight}}" name="goalWeight" required>
            <div class="ui basic label">
                kg
            </div>
        </div>
    </div>
    </div>
    <button class="ui orange submit button">Add Goal</button>
    <i class="red asterisk icon"></i>Denotes required field<br>
</form>
</section>

<!-- http://jsfiddle.net/mblase75/kz7d2/ -->
<script>
    var today = new Date().toISOString().split('T')[0];
    document.getElementsByName("completionDate")[0].setAttribute('min', today);
</script>