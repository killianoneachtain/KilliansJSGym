{{> menu id="trainerDashboard"}}

<section>
    {{> memberVitals}}
</section>


<section class="ui raised segment">
   {{#each assessments}}

    <table class="ui red fixed celled table">

        <thead>
        <tr>
            <th>Date</th>
            <th>Weight (Kg)</th>
            <th>Chest (cm)</th>
            <th>Thigh (cm)</th>
            <th>Upper Arm (cm)</th>
            <th>Waist (cm)</th>
            <th>Hips (cm)</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td data-label="Assessment Time">{{date}}</td>
            <td data-label="Weight">{{weight}}</td>
            <td data-label="Chest">{{chest}}</td>
            <td data-label="Thigh">{{thigh}}</td>
            <td data-label="Upper Arm">{{upperArm}}</td>
            <td data-label="Waist">{{waist}}</td>
            <td data-label="Hips">{{hips}}</td>
            <td data-label="Comment">{{comment}}</td>
        </tr>
        </tbody>
    </table>
    <form class="ui form" action="/trainer/{{id}}/addcomment" method="POST">
        <div class="field">
            <label><i class="comment alternate icon"></i>Comment</label>
            <div class="ui input focus">
                <textarea rows="4" type="text" placeholder="Add comments..." maxlength="400" name="comment"></textarea>
            </div>
        </div>
        <button class="ui blue submit button">
            <i class="large icons">
                <i class="comment alternate icon"></i>
                <i class="corner red add icon"></i>
            </i></button>
    </form>
   {{/each}}

</section>